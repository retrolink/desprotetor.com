{
  "name": "BTBuckets GA integration",
  "version": "1.0.8",
  "permissions": ["tabs"],
  "content_scripts": 
  [
   {
      "matches": ["https://www.google.com/analytics/*", "https://adwords.google.com/*"],
      "css": [ "wiz.css" ],
      "js": ["/lib/jquery-1.4.min.js", "gabuckets.js"],
      "run_at":"document_end"
   }
  ],  
  "icons": { "48": "inspire48.png", "128": "inspire128.png" },
  "background_page": "background.html",
  "description": "Use BTBuckets (Free profiling tool) with your Google Analytics account to easily create segments and targets from within GA",
  "browser_action": 
  {
    "default_icon": "icon.png",
    "default_title": "BTBuckets GA integration",
    "popup": "popup.html"
  },
  "permissions": 
  [
    "https://btbuckets.com/","https://google.com/", "https://adwords.google.com/"
  ]
}
