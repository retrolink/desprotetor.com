/*modal */
html,body
{
    margin:0;
    padding:0;
    border:none;
    text-align:left;
    *height:100%;
}


#page-overlay
{
    position:fixed;
    left:0;
    top:0;
    height:100%;
    left:0;
    right:0;
    z-index:100;
    *position:absolute;
    *right:19px;
    display:none;
}
 
#simple-overlay
{
    position:fixed;
    left:0;
    top:0;
    height:100%;
    left:0;
    right:0;
    z-index:200;
    *position:absolute;
    *right:19px;
    display:block;
    *zoom:1;
    *background:none;
   background-image:url(data:image/gif;base64,R0lGODlhFAAUAIAAADMzM///zCH5BAQUAP8ALAAAAAAUABQAAAIRhI+py+0Po5y02ouz3rz7rxUAOw==);
	background-repeat:repeat; 		
}

#simple-overlay .overlay-center
{
    display:table;
    margin:auto;
    height:100%;
    width:100%;
 
    *width:auto;
    *zoom:1;
    *display:block;	 
}
 
#page-overlay
{
    *zoom:1;
    *background:none;
   background-image:url(data:image/gif;base64,R0lGODlhFAAUAIAAADMzM///zCH5BAQUAP8ALAAAAAAUABQAAAIRhI+py+0Po5y02ouz3rz7rxUAOw==);
	background-repeat:repeat;   
}
 
 
 
#page-overlay .overlay-center
{
    display:table;
    margin:auto;
    height:100%;
    width:100%;
    *width:auto;
    *zoom:1;
    *display:block;
}
 
 
#page-overlay .overlay-center .overlay-center-hd
{
   background-image:url(data:image/gif;base64,R0lGODlhAQABAJEAAAAAAP///////wAAACH5BAUUAAIALAAAAAABAAEAAAICVAEAOw==);
	background-repeat:repeat;
    display:block;
    position:absolute;
    left:0;
    top:0;
    width:100%;
    height:100%;
    opacity:0.5;
    z-index:-1;
 
`   *position:static;
    *height:100%;
    *width:0;
    *vertical-align:middle;
    *zoom:1;
    *display:inline;
}
 
#page-overlay .overlay-center .overlay-center-bd
{
    display:table-cell;
    vertical-align:middle;
    
    *zoom:1;
    *display:inline;
}
 
 
#page-overlay .overlay-center .mod
{
    margin:auto;
    padding:12px;
    width:500px;
}
 
 
#page-body
{
    *width:100%;
    *height:100%;  
    *overflow:auto;
    *overflow-y:scroll;
}
 
 
#page-body p
{  
    width:500px;
    margin:20px auto;
}

   
#modalW
{
   background-image:url(data:image/gif;base64,R0lGODlhFAAUAIAAADMzM///zCH5BAQUAP8ALAAAAAAUABQAAAIRhI+py+0Po5y02ouz3rz7rxUAOw==);
	background-repeat:repeat;
	width:auto;
	z-index:12300;
	padding:30px;
	position:relative;
}     

#modalClose
{
   cursor:pointer;
}

#page-overlay #modalW #modalClose
{
position:absolute; 
right:-10px; 
top:-15px;
}

#modalW #lcontent
{
   padding:0 1em;
   font-size:12px;
   font-family:Arial, Helvetica, sans-serif;
   color:#666666;
   width: auto; 
   float:none; 
   clear:both; 
   background-color:#FFFFFF; 
   padding:10px;
	text-align:left;
}	
#modalW #lcontent form, #modalW #lcontent select, #modalW #lcontent input{
	color:#656565;
	font-size:13px; font-weight:bold;
}

.warr
{
float:right;cursor:pointer;height:7px;position:absolute;right:10px;top:15px;width:9px;background:url(/img/wz/arrows.gif) no-repeat scroll 0 0 transparent;
}
